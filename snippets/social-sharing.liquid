{% if block.settings.social_sharing_facebook or
  block.settings.social_sharing_twitter or
  block.settings.social_sharing_pinterest %}

{% capture permalinkURL %}{{ shop.url }}{{ product.url }}{% endcapture %}
{% capture shareTitle %}{{ product.title }}{% endcapture %}
{% capture shareImage %}{{ product.featured_image | product_img_url: '2000x2000' }}{% endcapture %}

{% if template.name == 'article' %}
  {% capture permalinkURL %}{{ shop.url }}{{ article.url }}{% endcapture %}
{% endif %}

<div id="sharing" class="social-sharing" data-permalink="{{ permalinkURL }}" {% if block_attributes %}{{ block_attributes }}{% endif %}>

  {% if block.settings.social_sharing_facebook %}
  <!-- https://developers.facebook.com/docs/plugins/share-button/ -->
  <a target="_blank" rel="nopener noreferrer" href="//www.facebook.com/sharer.php?u={{ permalinkURL }}" class="share-facebook">
     <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 32 32">
       <path d="M18.56 31.36V17.28h4.48l.64-5.12h-5.12v-3.2c0-1.28.64-2.56 2.56-2.56h2.56V1.28H19.2c-3.84 0-7.04 2.56-7.04 7.04v3.84H7.68v5.12h4.48v14.08h6.4z"></path>
     </svg>
     <span class="share-title">{{ "general.social.share" | t }}<span class="sr-only"> Facebook</span></span>
  </a>
  {% endif %}

  {% if block.settings.social_sharing_twitter %}
  <!-- https://dev.twitter.com/docs/intents -->
  <a target="_blank" rel="nopener noreferrer" href="//twitter.com/share?url={{ permalinkURL }}&amp;text={{ shareTitle | escape }}" class="share-twitter">
     <svg aria-hidden="true" focusable="false" role="presentation"  viewBox="0 0 24 24">
       <path d="M8.1345 0.0913696H0.591333L9.64935 13.274L0.5 23.9087H3.36304L10.9205 15.1238L16.9569 23.9087H24.5L15.1144 10.2489L23.8526 0.0913696H20.9897L13.8428 8.39902L8.1345 0.0913696ZM20.4756 21.8174H18.2032L4.52443 2.2512H6.79686L20.4756 21.8174Z"/>
     </svg>
      <span class="share-title">{{ "general.social.share" | t }}<span class="sr-only"> Twitter</span></span>
  </a>
  {% endif %}

  {% if block.settings.social_sharing_pinterest %}
  <!--
  https://developers.pinterest.com/pin_it/
  Pinterest get data from the same Open Graph meta tags Facebook uses
  -->
  <a target="_blank" rel="nopener noreferrer" href="//pinterest.com/pin/create/button/?url={{ permalinkURL }}&amp;media={{ shareImage }}&amp;description={{ product.title | escape }}" class="share-pinterest">
   <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 32 32">
     <path d="M27.52 9.6c-.64-5.76-6.4-8.32-12.8-7.68-4.48.64-9.6 4.48-9.6 10.24 0 3.2.64 5.76 3.84 6.4 1.28-2.56-.64-3.2-.64-4.48-1.28-7.04 8.32-12.16 13.44-7.04 3.2 3.84 1.28 14.08-4.48 13.44-5.12-1.28 2.56-9.6-1.92-11.52-3.2-1.28-5.12 4.48-3.84 7.04-1.28 4.48-3.2 8.96-1.92 15.36 2.56-1.92 3.84-5.76 4.48-9.6 1.28.64 1.92 1.92 3.84 1.92 6.4-.64 10.24-7.68 9.6-14.08z"></path>
   </svg>
   <span class="share-title">{{ "general.social.share_on_pinterest" | t }}<span class="sr-only"> Pinterest</span></span>
  </a>
  {% endif %}

</div>

{% endif %}
